amethyst Calculator {
  calculate = addexpr

  addexpr = addexpr:x "+" mulexpr:y -> x+y
          | addexpr:x "-" mulexpr:y -> x-y
          | mulexpr

  mulexpr = mulexpr:x "*" int:y     -> x*y
          | mulexpr:x "/" int:y     -> x/y
          | "(" addexpr:x ")"       -> x
          | int
}
Calculator.calculate("2-4+2*2--2")
