amethyst Regexp2Amethyst {
  root = choice

  choice=sequence
  choice    = listOf('sequence','|'):ary  @Or_AST
  
  sequence  = postfixed*:ary              @Seq_AST

  postfixed = atom:a (<?+*>:m {RegModifier[a,m]} | {a})
 
  atom      = ~eof 
            ( '(' choice:c ')' -> c
            | '[' ( ']' break
                  | ('\\':[s])? .:[s]
                  )* -> Apply["regch","/["+s*""+"]/"]

            | <^|()?+*>:c      -> Apply["seq",c]
            )

}
